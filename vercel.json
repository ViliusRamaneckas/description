{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "installCommand": "npm install",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://www.freeimagedescriber.com/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "freeimagedescriber.com"
        }
      ],
      "destination": "https://www.freeimagedescriber.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://description-908s.onrender.com/api/:path*"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://description-908s.onrender.com"
  }
} 